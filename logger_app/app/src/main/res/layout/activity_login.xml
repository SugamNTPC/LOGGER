<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/login_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            android:textSize="24sp"
            android:textAllCaps="true"
            android:letterSpacing="0.2"
            android:text="Login"/>
        <ImageView
            android:layout_width="@dimen/login_iconSize"
            android:layout_height="@dimen/login_iconSize"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">
                    <ImageView
                        android:layout_width="@dimen/login_mini_iconSize"
                        android:layout_height="@dimen/login_mini_iconSize"
                        android:src="@drawable/phone"/>
                    <EditText
                        android:id="@+id/login_phone"
                        android:inputType="phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:hint="Phone number here"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="24dp">
                <ImageView
                    android:layout_width="@dimen/login_mini_iconSize"
                    android:layout_height="@dimen/login_mini_iconSize"
                    android:src="@drawable/password"/>
                <RelativeLayout
                    android:id="@+id/login_PasswordParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/login_password"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:hint="Password here"/>
                    <ImageView
                        android:id="@+id/login_passwordVisible"
                        android:alpha="0.5"
                        android:layout_width="@dimen/login_mini_iconSize"
                        android:layout_height="@dimen/login_mini_iconSize"
                        android:layout_alignRight="@+id/login_password"
                        android:src="@drawable/hide"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/login_progressbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/login_progressText"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button
            android:id="@+id/login_button"
            android:background="@color/buttonColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:textSize="20sp"
            android:letterSpacing="0.2"
            android:textColor="@android:color/white"
            android:text="LOGIN"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>